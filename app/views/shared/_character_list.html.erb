<div class="container">
  <div class="row">
    <% @characters.each do |character| %>
      <div class="col-md-2">
        <% if user_signed_in? %>
            <%= "Mine? " + ((character.user_id == current_user.id) ? "Yes" : "No") %>
        <% end %>
        </div>
      <div class="col-md-2">
        Name: <%= best_in_place_if character_editable?(character), character, :name %>
      </div>
      <div class="col-md-1">
        Age: <%= best_in_place_if character_editable?(character), character, :age %>
      </div>
      <div class="col-md-2">
        Gender: <%= best_in_place_if character_editable?(character), character, :gender, type: :select, :collection => [["Male", "Male"], ["Female", "Female"], ["", "Unspecified"]]%>
      </div>
      <div class="col-md-1">
        Level: <%= best_in_place_if character_editable?(character), character, :level %>
      </div>
      <div class="col-md-2">
        Public? <%= best_in_place_if character_editable?(character), character, :public_flag, type: :select, :collection => [[false, "No"], [true, "Yes"]] %>
      </div>
      <div class="col-md-2">
        <%= link_to "Full Sheet", character_path(character) %>
      </div>
    <% end %>
  </div>
</div>
