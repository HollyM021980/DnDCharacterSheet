<div class="container-fluid well">
  <div class="row">
      <div class="col-md-2">
        <% if user_signed_in? %>
            Mine?
        <% end %>
      </div>
      <div class="col-md-2">
        Name
      </div>
      <div class="col-md-1">
        Age
      </div>
      <div class="col-md-2">
        Gender
      </div>
<%
=begin %>
      <div class="col-md-1">
        Level
      </div>
<%
=end %>
      <div class="col-md-2">
        Public?
      </div>
      <div class="col-md-2">
      </div>
    </div>
    <hr>
    <div class="row">
    <% @characters.each do |character| %>
      <div class="col-md-2">
        <% if user_signed_in? %>
            <%= (character.user_id == current_user.id) ? "Yes" : "No" %>
        <% end %>
      </div>
      <div class="col-md-2">
        <%= best_in_place_if character_editable?(character), character, :name %>
      </div>
      <div class="col-md-1">
        <%= best_in_place_if character_editable?(character), character, :age %>
      </div>
      <div class="col-md-2">
        <%= best_in_place_if character_editable?(character), character, :gender, type: :select, :collection => [["Male", "Male"], ["Female", "Female"], ["", "Unspecified"]]%>
      </div>
<%
=begin %>
      <div class="col-md-1">
        <%= best_in_place_if character_editable?(character), character, :level %>
      </div>
<%
=end %>
      <div class="col-md-2">
        <%= best_in_place_if character_editable?(character), character, :public_flag, type: :select, :collection => [[false, "No"], [true, "Yes"]] %>
      </div>
      <div class="col-md-2">
        <%= link_to "Full Sheet", character_path(character) %>
      </div>
    <% end %>
  </div>
</div>
