<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: "form", class: "form-border well"} ) do |f| %>
  <h3>Log in</h3>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", id: "exampleInputEmail1" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "exampleInputPassword1" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, class: "checkbox" %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Log in", class: "btn btn-default" %></div>
<% end %>

<%= render "devise/shared/links" %>


