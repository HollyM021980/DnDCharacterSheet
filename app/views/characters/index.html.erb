<div class="container">
  <div class="row">
    <% @characters.each do |character| %>
      <div class="col-md-3">
        Name: <%= character.name %>
      </div>
      <div class="col-md-2">
        Age: <%= character.age.to_s %>
      </div>
      <div class="col-md-2">
        Gender: <%= character.gender %>
      </div>
      <div class="col-md-2">
        Level: <%= character.level %>
      </div>
      <div class="col-md-2">
        Public?: <%= character.public.to_s %>
      </div>
    <% end %>
  </div>
</div>
