<div class="container">
  <div class="row">
    <% @characters.each do |character| %>
      <div class="col-md-3">
        Name: <%= best_in_place character, :name %>
      </div>
      <div class="col-md-2">
        Age: <%= best_in_place character, :age %>
      </div>
      <div class="col-md-2">
        Gender: <%= best_in_place character, :gender, type: :select, :collection => [["Male", "Male"], ["Female", "Female"], ["", "Unspecified"]]%>
      </div>
      <div class="col-md-2">
        Level: <%= best_in_place character, :level %>
      </div>
      <div class="col-md-2">
        <%= best_in_place character, :public_flag, type: :select, :collection => [[false, "No"], [true, "Yes"]] %>
      </div>
    <% end %>
  </div>
</div>
